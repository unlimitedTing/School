﻿@model School.Models.TeacherCourses
@{
    ViewBag.Title = "Show";
}

<a class="navlink" href="/Teacher/List">Back To Teachers</a>
<div id="containershow">
    <h2>@Model.Teacher.TeacherFname @Model.Teacher.TeacherLname</h2>
    <p>@Model.Teacher.EmployeeNumber</p>
    <p>@Model.Teacher.HireDate</p>
    <p>@Model.Teacher.Salary</p>
</div>
<div>
    @foreach (var course in Model.CoursesTaught)
    {
        <div class="listitem row">
            <div class="col-md-12"><a href="#">@course.ClassCode @course.ClassName</a></div>
        </div>
    }
</div>

